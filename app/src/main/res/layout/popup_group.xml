<!-- popup_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center"
    android:background="@drawable/rounded_corners2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corners1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn điều trị nhóm với: "
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>
        <ImageView
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_corners3"
            android:src="@drawable/down"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners3"
        android:layout_marginTop="8dp"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:id="@+id/banbe"
            android:text="Bạn bè, người quen"></TextView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@drawable/dashed_line"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/click"></ImageView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:id="@+id/ramdom"
            android:textStyle="bold"
            android:text="Ngẫu nhiên"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="@drawable/dashed_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners3"
        android:layout_marginTop="8dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textgreen"
            android:textStyle="bold"
            android:background="@color/white"
            android:hint="Nhập mã nhóm, nếu có"
            android:textSize="13dp"></EditText>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_line"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="@drawable/dashed_line"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textgreen"
            android:text="Tạo nhóm mới"></Button>
    </LinearLayout>

</LinearLayout>
