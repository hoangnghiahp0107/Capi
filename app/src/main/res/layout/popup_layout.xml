<!-- popup_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center"
    android:background="@drawable/rounded_corners2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corners1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đang có vấn đề về: "
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>
        <ImageView
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_corners3"
            android:src="@drawable/down"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners3"
        android:layout_marginTop="4dp"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:id="@+id/tinhcam"
            android:text="Tình cảm"></TextView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@drawable/dashed_line"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/click"></ImageView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:id="@+id/congviec"
            android:textStyle="bold"
            android:text="Công việc"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="@drawable/dashed_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/giadinh"
            android:text="Gia đình"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5sp"
            android:background="@drawable/dashed_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/khac"
            android:text="Khác"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2.5sp"
            android:background="@drawable/dashed_line"/>
    </LinearLayout>

</LinearLayout>
